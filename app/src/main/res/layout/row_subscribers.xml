<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subscriberFrame"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:padding="2dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/avatar" />

    <RelativeLayout
        android:id="@+id/subscriberview"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:alpha="0.60"
        android:background="@color/colorBlack"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toggleSubscriberView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/maximize"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toggleAudioSubscriber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/soundon" />

        <TextView
            android:id="@+id/textViewSubscribername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_margin="9dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Subscriber"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="18dp" />

    </LinearLayout>
</FrameLayout>
