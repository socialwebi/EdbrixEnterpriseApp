<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:id="@+id/subscriberFrame"
    android:padding="2dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:src="@drawable/avatar"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/subscriberview"/>

    <TextView
        android:id="@+id/textViewSubscribername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="Subscriber"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:ellipsize="end"
        android:maxLines="1"/>

 <!--<ImageView
        android:id="@+id/toggleSubscriberView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:src="@drawable/fullview"
        android:layout_gravity="top|left"/>-->

    <ImageView
        android:id="@+id/toggleAudioSubscriber"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:src="@drawable/soundon"
        android:layout_gravity="top|right"
        android:padding="2dp"/>

</FrameLayout>
