<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:id="@+id/subscriberFrame"
    android:padding="2dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:src="@drawable/avatar"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/subscriberview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:background="@drawable/subscriber_item_controls_background">

        <ImageView
            android:id="@+id/toggleSubscriberView"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/fullview"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="2dp" />
        <TextView
            android:id="@+id/textViewSubscribername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Subscriber"
            android:textAlignment="center"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/toggleAudioSubscriber"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/soundon"
            android:padding="2dp"/>
    </LinearLayout>
</FrameLayout>
