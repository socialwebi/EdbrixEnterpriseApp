<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    tools:context="com.edbrix.enterprise.Activities.TokBoxActivity">

    <FrameLayout
        android:id="@+id/fullViewFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.35">

        <RelativeLayout
            android:id="@+id/fullViewLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="1dp" />

        <LinearLayout
            android:id="@+id/fullViewControlsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/stopBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.70"
                android:background="#ffffff"
                android:padding="3dp"
                android:visibility="gone"
                android:src="@drawable/zm_ic_stop" />

            <ImageView
                android:id="@+id/startBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.70"
                android:background="#ffffff"
                android:padding="3dp"
                android:src="@drawable/record" />

            <ImageView
                android:id="@+id/zoomView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.70"
                android:background="#ffffff"
                android:padding="3dp"
                android:src="@drawable/maximize" />
        </LinearLayout>

        <TextView
            android:id="@+id/countDownTimerText"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:background="@drawable/round_image_red_whiteborder"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/currentTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.70"
            android:background="@color/colorWhiteSmoke"
            android:padding="@dimen/app_normal_padding"
            android:text="00:00"
            android:visibility="gone"
            android:textColor="@color/colorSubText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom|center"
            android:alpha="0.70"
            android:background="#ffffff"
            android:visibility="gone"
            android:orientation="horizontal">



        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/rightLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/publisherScreenFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/publisherviewLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="1dp" />

            <LinearLayout
                android:id="@+id/publisherControlLayout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center"
                android:alpha="0.70"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/swapCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/switchcamera" />

                <ImageView
                    android:id="@+id/toggleVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/videoon" />

                <ImageView
                    android:id="@+id/toggleAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/micon" />

                <ImageView
                    android:id="@+id/fullView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="1dp"
                    android:src="@drawable/fullview"
                    android:visibility="gone" />

            </LinearLayout>
        </FrameLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:paddingRight="1dp"
            android:paddingTop="1dp">

            <LinearLayout
                android:id="@+id/subscriberListLinear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
